{
  "name": "e3db",
  "version": "1.0.0",
  "description": "JavaScript client library for E3DB",
  "homepage": "https://github.com/tozny/e3db-js",
  "author": {
    "name": "Eric Mann",
    "email": "eric@tozny.com",
    "url": "https://tozny.com"
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": ["encryption", "encrypted-store", "api-client"],
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^4.8.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "testcov": "jest --coverage"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "max-params": ["error", 9],
      "no-prototype-builtins": ["off"],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "https://github.com/tozny/e3db-js",
  "jest": {
    "testEnvironment": "node"
  },
  "private": true,
  "dependencies": {
    "base64url": "^2.0.0",
    "es6-promise": "^4.1.1",
    "isomorphic-fetch": "^2.2.1",
    "libsodium-wrappers": "^0.5.4"
  }
}
